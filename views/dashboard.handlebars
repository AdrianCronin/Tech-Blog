{{!-- dashboard post button --}}
{{#each posts as |post|}}
<div class="container">
    <button type="button" class="btn btn-primary btn-lg col-12 ">
        <div class="d-flex justify-content-between">
            <span>{{post.title}}</span><span>{{post.date_created}}</span>
        </div>
    </button>
</div>
{{/each}}

{{!-- new post button --}}
<div class="container d-flex justify-content-around">
    <button type="button" class="btn btn-primary btn-lg">+New Post</button>
</div>