{{!-- blog post container --}}
<div class="container vstack gap-2 col-md-12 mx-auto">

    <div class="b-example-divider"></div>

    {{!-- post template --}}
    <div class="col">
        <div class="card h-100">
            <div class="card-header">
                <h4 class="card-title">{{post.title}}</h4>
            </div>
            <div class="card-body">
                <h5 class="card-title"></h5>
                <p class="card-text">{{post.content}}</p>
            </div>
            <div class="card-footer">
                <small class="text-muted d-flex justify-content-between"><span>Posted by {{post.user.username}}</span>
                    <span>{{post.date_created}}</span></small>
            </div>
        </div>
    </div>

    <div class="b-example-divider"></div>

    {{!-- posted comment template --}}
    {{#each comments as |comment|}}
    <div class="container">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title"></h5>
                <p class="card-text">{{comment.content}}</p>
            </div>
            <div class="card-footer">
                <small class="text-muted d-flex justify-content-between"><span>Posted by
                        {{comment.user.username}}</span><span>{{comment.date_created}}</span></small>
            </div>
        </div>
    </div>
    {{/each}}
</div>

{{!-- add comment template --}}
<div class="container">

    <form id="commentForm">
        <div class="mb-3 container col-md-6 text-center">
            <label for="commentBox" class="form-label h3 mb-3 fw-normal">Comment</label>
            <textarea class="form-control" id="commentBox" rows="3" data-post_id="{{post.id}}"></textarea>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Submit</button>
        </div>
    </form>
    
</div>

<script src="/js/newComment.js"></script>